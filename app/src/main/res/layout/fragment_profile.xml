version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Profile Section -->


        <!-- Rewards Section -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/holo_green_light"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:contentDescription="Profile Picture"
                android:src="@drawable/ic_launcher_foreground" />


            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@marcsmith"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/profile_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸŒ± Planting seeds of adventure wherever I go"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/profile_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="3911 points"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <Button
                android:id="@+id/claim_points_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Claim Free Points"
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/reward_3000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3000 Points - Redeem"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/reward_5000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="5000 Points"
            android:textColor="@color/material_dynamic_neutral70" />


        <Button
            android:id="@+id/reward_10000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10000 Points"
            android:textColor="@color/material_dynamic_neutral70" />


        <!-- Navigation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Others"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Home"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/nav_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Challenges"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/nav_seeRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Rewards"
            android:layout_marginBottom="8dp" />


        <!-- New Buttons -->
        <Button
            android:id="@+id/nav_partner_loyalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partner Loyalty Program"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/nav_my_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Stats" />
    </LinearLayout>
</ScrollView>

