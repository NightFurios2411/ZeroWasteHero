<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVChallengesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="It's Challenges Time!"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVChallengesSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Pick a challenge, complete it, earn rewards."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Challenge 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_green_light"
                android:backgroundTint="#BDDBAF"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/challenge_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dedicate 14 days to upcycling old items into something useful"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/challenge_reward_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#00897B"
                    android:text="ðŸŽ 10% discount on eco-friendly stores"
                    android:textColor="#00310E"
                    android:textColorHint="#00897B"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/challenge_availability_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Available until 31 Dec 2024"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/challenge_details_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="Details"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <!-- Challenge 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_green_light"
                android:backgroundTint="#BDDBAF"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/challenge_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host a community clean-up day"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/challenge_reward_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ðŸŽ Free entry to the sustainability expo"
                    android:textColor="#00310E"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/challenge_availability_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Available until 15 Jan 2025"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/challenge_details_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="Details"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <!-- Challenge 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_green_light"
                android:backgroundTint="#BDDBAF"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/challenge_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go 30 days without using single-use plastics"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/challenge_reward_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ðŸŽ Exclusive sustainable living guide"
                    android:textColor="#00310E"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/challenge_availability_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Available until 28 Feb 2025"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/challenge_details_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="Details"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <!-- Add more challenges here -->
        </LinearLayout>
    </LinearLayout>


    <!-- Challenges List -->

</androidx.core.widget.NestedScrollView>


