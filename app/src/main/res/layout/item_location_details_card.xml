<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/TVLocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Klean @ KL sentral"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVLocationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Kuala Lumpur Sentral, 50470 Kuala Lumpur"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/TVLocationHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Operating Hours: 0930 - 1700"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/TVLocationOpenStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Open"
            android:textColor="#008000" />

        <TextView
            android:id="@+id/TVLocationDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Distance: 3.2KM"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</androidx.cardview.widget.CardView>